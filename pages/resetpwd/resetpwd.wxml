      <input bind:change='inputNameCheck' type="text" name="username" id="use" placeholder="输入当前登录账号的用户名" value="{{ user_name_for_check}}" style="position: absolute; left: 209rpx; top: -4rpx; width: 537rpx; height: 52rpx; display: block; box-sizing: border-box"></input>
