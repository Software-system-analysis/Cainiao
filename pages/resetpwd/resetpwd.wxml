      <input bind:change='inputPasswordCheck' type="password" name="password" id="pass1" placeholder="输入当前登录账户的密码"
        value="{{password}}" style="position: absolute; left: 202rpx; top: 129rpx; width: 488rpx; height: 52rpx; display: block; box-sizing: border-box"></input>
